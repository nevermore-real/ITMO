<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG">
    <Appenders>
        <Console name="Console" target = "SYSTEM_OUT">
        </Console>
    </Appenders>

    <Loggers>
        <Logger name = "Server.src.Server.Server" level = "trace" additivity = "false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name = "Server.src.Server.ServerRequests" level = "info" additivity = "false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name = "Server.src.Server.ServerHandler" level = "info" additivity = "false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Root level="info">
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>

</Configuration>